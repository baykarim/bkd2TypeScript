name: ğŸ§± Build TypeScript Project

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: ğŸ“¦ Checkout repository
      uses: actions/checkout@v4

    - name: âš™ï¸ Setup Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '20'

    - name: ğŸ“¥ Install dependencies
      run: npm install

    - name: ğŸ—ï¸ Compile TypeScript
      run: npm run build

    - name: ğŸš€ Run project
      run: npm start
